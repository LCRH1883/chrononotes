{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Chrononotes",
  "version": "0.1.0",
  "identifier": "com.lcrh.chrononotes",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run dev -- --host 127.0.0.1 --port 5173",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Chrononotes",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": ".*"
    },
    "updater": {
      "active": true,
      "endpoints": ["${TAURI_UPDATER_ENDPOINT}"],
      "dialog": true,
      "pubkey": "${TAURI_UPDATER_PUBKEY}"
    }
  }
}
